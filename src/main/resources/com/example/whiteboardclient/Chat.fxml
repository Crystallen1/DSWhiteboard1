<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.whiteboardclient.controller.ChatController"
      spacing="5">
    <Text text="ChatBox"/>
    <TextArea fx:id="chatArea" editable="false" prefHeight="200" prefWidth="200"/>
    <TextField fx:id="chatInput"/>
    <Button text="Send" onAction="#sendChat"/>
</VBox>
